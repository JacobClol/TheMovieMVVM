<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.themoviemvvm.ui.fragment.MainFragment"
        android:label="Popular Movies"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="idMovie"
                app:argType="integer"
                android:defaultValue="0" />
            <argument
                android:name="detailMovie"
                app:argType="com.example.themoviemvvm.domain.models.DetailMovie"
                app:nullable="true"
                android:defaultValue="@null" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.themoviemvvm.ui.fragment.DetailFragment"
        android:label="Detail Movie"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="idMovie"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="detailMovie"
            app:argType="com.example.themoviemvvm.domain.models.DetailMovie"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>